        c4l=darken(c1l, 2.75%)
        
        cal=color-accent-light
        cahl=darken(cal, 10%)
        
        cll=color-linked-light
        clhl=darken(cll, 10%)
        cll1=rgba(cll, 0.1)
        
        cf1l=color-font-light
        cf2l=rgba(cf1l, 0.7)
        cf3l=rgba(cf1l, 0.5)
        
        /* Dark Theme */
        c1d=color-dark
        c2d=lighten(c1d, 5%)
        c3d=lighten(c1d, 10%)
        c4d=lighten(c1d, 20%)
