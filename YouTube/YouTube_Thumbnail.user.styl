@var            color color-accent-light "--- Accent" #f00

@var            color color-linked-light "--- Linked" #3ea6ff

@var            color color-font-light "--- Font" #0f0f0f

@var            color color-dark "Dark Mode" #0f0f0f

@var            color color-accent-dark "--- Accent" #f00

